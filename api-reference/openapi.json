{
  "openapi": "3.0.1",
  "info": {
    "title": "OpenAPI Plant Store",
    "description": "A sample API that uses a plant store as an example to demonstrate features in the OpenAPI specification",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://sandbox.mintlify.com"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/send-message": {
      "post": {
        "description": "Envia uma mensagem",
        "requestBody": {
          "description": "Envia uma mensagem", 
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Message"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "retorno bem sucedido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "message added to the queue"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Erro ao mandar mensagem"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/plants/{id}": {
      "delete": {
        "description": "Deletes a single plant based on the ID supplied",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of plant to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Plant deleted",
            "content": {}
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Message": {
        "required": [
          "from" , "accountId" , "whatsappId" , "message", "contact.name", "contact.phone" , "messageTimeout" , "isPrivate" , "queueId" , "tagId" , "queued"
        ],
        "type": "object",
        "properties": {
          "from": {
            "description": "local de envio",
            "type": "string"
          },
          "accountId": {
            "description": "número da conta",
            "type": "string"
          },
          "whatsappId": {
            "description": "número de identificação único do contato",
            "type": "string"
          },
          "message": {
            "description": "mensagem que será enviada",
            "type": "string"
          },
          "contact": {
            "type": "object",
            "properties": {
              "name": {
                "description": "nome do contato",
                "type": "string"
              },
              "phone": {
                "description": "número de telefone do contato",
                "type": "string"
              }
            }
          },
          "messageTimeout": {
            "description": "quanto tempo até resolver automaticamente o atendimento por falta de resposta a essa mensagem específica",
            "type": "string"
          },
          "isPrivate": {
            "description": "deve ser enviada no Sacflow como uma mensagem privada (não chegará para o cliente no WhatsApp)",
            "type": "string"
          },
          "queueId": {
            "description": "Id do departamento",
            "type": "string"
          },
          "tagId": {
            "description": "Id da etiqueta",
            "type": "string"
          },
          "queued": {
            "description": "Vai pra filar? Por padrão, sim!",
            "type": "string"
          }
        }
      },
      "NewPlant": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Message"
          },
          {
            "required": [
              "id"
            ],
            "type": "object",
            "properties": {
              "id": {
                "description": "Identification number of the plant",
                "type": "integer",
                "format": "int64"
              }
            }
          }
        ]
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}